<div class="container-fluid">
  <div class="row header">
    <div class="col-lg-7 col-lg-offset-2 col-md-10 col-sm-10 col-xs-9">
      <h1>Канцеларија за младе Зубин Поток</h1>
    </div><!-- col -->
    <div class="col-lg-3 col-md-2 col-sm-2 col-xs-3">
      <a href="#" class="need-help">Помоћ?</a><span class="clearfix"></span>
    </div><!-- col -->
  </div><!-- row -->

  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 login-wraper">
      <div class="account-wall">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form form-signin' }) do |f| %>
          <legend><h1>Улогуј се на <span class="blue">Канцеларија за младе</span></h1></legend>
          <div class="body">
            <label>Корисничко име</label>
            <%= f.text_field :email, autofocus: true, required: true %>
            <label>Лозинка</label>
            <%= f.password_field :password, autocomplete: "off" %>
          </div><!-- body -->
          <div class="footer">
            <input type="checkbox" value="remember-me"> Запамти ме&nbsp;&nbsp;&nbsp;&nbsp;
            <button class="btn btn-primary" type="submit">Login</button>
          </div><!-- footer -->
        <% end %>
      </div><!-- account-wall -->
    </div><!-- col -->
  </div><!-- row -->
</div><!-- container -->