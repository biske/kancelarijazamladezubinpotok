<!DOCTYPE html>
<html>
  <head>
    <title>Admin Panel</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>

    <link href='http://fonts.googleapis.com/css?family=Play:400,700&subset=latin,cyrillic' rel='stylesheet' type='text/css'>

    <!--[if lt IE 9]>
      <%= javascript_include_tag 'respond' %>
    <![endif]-->
  </head>
  <body>
    <div class="row">
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="col-lg-2 col-md-3 col-sm-4 logo">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#horizontal-menu">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to dashboard_path, title: 'Naslovna strana', class: 'navbar-brand' do %>
              <%= image_tag 'logo.png', alt: 'Лого канцеларије', width: 100, height: 50 %>
            <% end %>
          </div>
        </div>
        <div class="col-lg-10 col-md-9 col-sm-8 right-menu">
          <div class="row">
            <div class="collapse navbar-collapse" id="horizontal-menu">
              <div class="col-lg-4 col-md-6 col-sm-5 col-xs-8">
                <form class="navbar-form" role="search">
                  <div class="form-group">
                    <input type="text" class="form-control" placeholder="Претражи">
                  </div>
                </form>
               </div>
              <div class="col-lg-8 col-md-6 col-sm-7 col-xs-4">
                <ul class="nav navbar-nav navbar-right">
                  <li class="hidden-xs"><a href="#" title="Обавештења"><span class="glyphicon glyphicon-globe"></span></a></li>
                  <li class="hidden-xs"><a href="#" title="Поруке"><span class="glyphicon glyphicon-envelope"></span></a></li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" title="Админ тај и тај"><span class="glyphicon glyphicon-user"></span> Корисник <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                      <li><a href="#">Профил</a></li>
                      <li><a href="#">Поруке</a></li>
                      <li class="divider"></li>
                      <li><%= link_to "Одјави се", destroy_user_session_path, method: :delete %></li>
                    </ul>
                  </li>
                </ul>
              </div>
            </div><!-- /.navbar-collapse -->
          </div><!-- row -->
        </div><!-- col -->
      </nav>
    </div><!-- row -->

    <aside id="side-menu" class="col-lg-2 col-md-3 col-sm-4">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#vertical-menu">
          <span class="sr-only">Toggle navigation</span>
          MENU
        </button>
      </div>
      <div class="collapse navbar-collapse" id="vertical-menu">
        <ul class="nav nav-pills nav-stacked">                      
          <li>
            <%= link_to "Почетна", dashboard_path %>
          </li>
          <li>
            <%= link_to "Вести", "#" %>
          </li>
          <li>
            <%= link_to "Занимљивости", "#" %>
          </li>
          <li>
            <%= link_to "Конкурси", "#" %>
          </li>
          <li>
            <%= link_to "Пројекти", "#" %>
          </li>
          <li>
            <%= link_to "Документа", "#" %>
          </li>
          <li>
            <%= link_to "Галерија", "#" %>
          </li>
        </ul>
      </div>
    </aside><!-- side-menu -->

    <section id="content" class="col-lg-10 col-md-9 col-sm-8">
      <ol class="breadcrumb">
        <li><a href="#">Почетна</a></li>
      </ol>

      <%= yield %>

    </section><!-- main-content -->
  </body>
</html>