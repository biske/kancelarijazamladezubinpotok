<section id="news-page">
	<div class="container">
	    <div class="row">
	    	
	    	<article class="articles">
		    	<div class="col-lg-8 col-md-8 col-sm-12">
					
					<ul id="news-list" class="list-unstyled">
					<% @articles.each do |article| %>
			    		<li class="row"> 
				      	 	<div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
								<p class="date"><%= article.created_at %></p>
							    <h2 class="title"><%= link_to article.title, article_path(article) %></h2>
							    <p class="hidden-xs"><%= truncate(my_strip_tags(article.body), length: 200) %></p>
							    <%= link_to article_path(article), class: 'btn btn-primary hidden-xs' do %>
						            Прочитајте више
						        	<span class="glyphicon glyphicon-chevron-right"></span>
						        <% end %>
					        </div><!-- col -->
							<div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
					      		<%= link_to article_path(article), title: 'Прочитај вест'  do %>
					      	 		<%= image_tag article.featured_image.url, alt: '#', class: 'img-responsive' %>
				      	 	  <% end %>
				      	 	</div><!-- col -->
					     </li>
					<% end %>
					</ul><!-- news-list -->
				
				    <div class="row">
				   		<div class="col-lg-12 col-md-12 col-sm-12">
				    		<div class="text-center">
					    		<nav>
									<ul class="pagination">
									    <li>
									      <a href="#" aria-label="Previous">
									        <span aria-hidden="true">&laquo;</span>
									      </a>
									    </li>
									    <li class="active"><a href="#">1</a></li>
									    <li><a href="#">2</a></li>
									    <li><a href="#">3</a></li>
									    <li>
									      <a href="#" aria-label="Next">
									        <span aria-hidden="true">&raquo;</span>
									      </a>
									    </li>
									</ul><!-- pagination -->
								</nav><!-- pagination -->
							</div><!-- pagination center -->
						</div><!-- pagination col -->
					</div><!-- pagination row -->


				</div><!-- col -->
			</article><!-- news -->

		<!-- side -->
      <aside>
        <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 side">
          
          <!-- video -->
          <div class="col-sm-1 visible-sm"></div><!-- samo za offset u sm velicini -->
            <div class="col-lg-12 col-md-12 col-sm-10 col-xs-12 video">
              <h3>Препоручујемо видео</h3>
              <%= video_tag 'avantura.mp4', width: '100%', height: '100%', poster: 'poster.jpg', controls: true %>
            </div><!-- col -->
          <div class="col-sm-1 visible-sm"></div><!-- samo za offset u sm velicini -->
          
          <!-- raska-banner -->
          <div class="col-sm-2 visible-sm"></div><!-- samo za offset u sm velicini -->
            <div class="col-lg-12 col-md-12 col-sm-4 col-xs-6 raska">
              <%= link_to "http://kzm.raska.rs", title: 'Канцеларија за младе Рашка', target: '_blank' do %>
                <%= image_tag 'kzm-raska.png', class: 'img-responsive' %>
              <% end %>
            </div><!-- col -->

          <!-- acdc-banner -->
          <div class="col-lg-12 col-md-12 col-sm-4 col-xs-6 acdc">
            <%= link_to "http://acdc-kosovo.org/index.php", target: '_blank', title: 'ACDC-Kosovo' do %>
              <%= image_tag 'acdc-logo.png', class: 'img-responsive' %>
            <% end %>
          </div><!-- col -->
          <div class="col-sm-2 visible-sm"></div><!-- samo za offset u sm velicini -->
          
          <!-- facebook-feed -->
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <div class="facebook-feed">
                <div class="fb-page" data-href="https://www.facebook.com/pages/Mladi-Zubin-Potok/1600602096848393?fref=ts" data-small-header="true" data-show-facepile="true" data-show-posts="true">
                  <div class="fb-xfbml-parse-ignore">
                    <blockquote cite="https://www.facebook.com/pages/Mladi-Zubin-Potok/1600602096848393?fref=ts"><a href="https://www.facebook.com/pages/Mladi-Zubin-Potok/1600602096848393?fref=ts">Mladi Zubin Potok</a></blockquote>
                  </div><!-- fb-xfbml-parse-ignore -->
                </div><!-- fb-page -->
              </div><!-- facebook-feed -->
            </div><!-- col -->
          </div><!-- row -->
          
          <!-- twitter-feed -->
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <div class="twitter-feed">
                <a class="twitter-timeline" href="https://twitter.com/mladizubinpotok" data-widget-id="616178414899343360" data-chrome="noborders">Tweets by @mladizubinpotok</a>
              </div><!-- twitter-feed -->
            </div><!-- col -->
          </div><!-- row -->

        </div><!-- col -->
      </aside><!-- side -->

    </div><!-- row -->
  </div><!-- container -->
</section><!-- news-page -->