<section id="news-page">
	<div class="container">
	    <div class="row">
	    	
	    	<article class="articles">
		    	<div class="col-lg-9 col-md-9 col-sm-12">
					
					<ul id="news-list" class="list-unstyled">
					    <% @articles.each do |article| %>
					    	<div class="col-lg-4 col-md-6 col-sm-6">
					    		<li>
							      	<div class="thumbnail">
							      		<%= link_to article_path(article) do %>
				                  <%= image_tag article.featured_image.url %>
						      	 	  <% end %>
							      		<div class="caption">
									        <h2><%= link_to article.title, article_path(article) %></h2>
									        <p><%= truncate(my_strip_tags(article.body), length: 200) %></p>
									        <%= link_to article_path(article), class: 'btn btn-primary' do %>
								              Прочитајте више
								              <span class="glyphicon glyphicon-chevron-right"></span>
								            <% end %>
								        </div><!-- caption -->
							      	</div>
							     </li>
					    	</div><!-- col -->
					    <% end %>
					</ul><!-- news-list -->
				
				    <div class="row">
				   		<div class="col-lg-12 col-md-12 col-sm-12">
				    		<div class="text-center">
					    		<nav>
									<ul class="pagination">
									    <li>
									      <a href="#" aria-label="Previous">
									        <span aria-hidden="true">&laquo;</span>
									      </a>
									    </li>
									    <li class="active"><a href="#">1</a></li>
									    <li><a href="#">2</a></li>
									    <li><a href="#">3</a></li>
									    <li>
									      <a href="#" aria-label="Next">
									        <span aria-hidden="true">&raquo;</span>
									      </a>
									    </li>
									</ul><!-- pagination -->
								</nav><!-- pagination -->
							</div><!-- pagination center -->
						</div><!-- pagination col -->
					</div><!-- pagination row -->


				</div><!-- col -->
			</article><!-- news -->

			<aside class="side">
	          <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">

	            <div class="row">
	              <div class="col-lg-12 col-md-12 col-sm-6 video">
	                <div class="panel panel-default">
	                  <div class="panel-heading hidden-sm">
	                    <h3>Препоручујемо видео 1</h3>
	                  </div>
	                  <div class="panel-body">
	                    <video width="100%" height="100%" poster="video/our_vineyard.jpg" controls="controls">
	                      <source src="video/our_vineyard.mp4" type="video/mp4">Your browser does not support HTML5 video.
	                    </video>
	                  </div>
	                </div><!-- panel -->      
	              </div><!-- col -->
	            </div><!-- row -->

	            <div class="row">
	              <div class="col-lg-12 col-md-12 col-sm-6 video">
	                <div class="panel panel-default">
	                  <div class="panel-heading hidden-sm">
	                    <h3>Препоручујемо видео 2</h3>
	                  </div>
	                  <div class="panel-body">
	                    <video width="100%" height="100%" poster="video/our_vineyard.jpg" controls="controls">
	                      <source src="video/our_vineyard.mp4" type="video/mp4">Your browser does not support HTML5 video.
	                    </video>
	                  </div>
	                </div><!-- panel -->      
	              </div><!-- col -->
	            </div><!-- row -->

	            <div class="row">
	              <div class="col-lg-12 col-md-12 col-sm-6 reklama">
	                <div class="panel panel-default">
	                  <div class="panel-heading hidden-sm">
	                    <h3>Реклама 1</h3>
	                  </div>
	                  <div class="panel-body">
	                    <p>Садржај</p>
	                  </div>
	                </div><!-- panel -->
	              </div><!-- col -->
	            </div><!-- row -->

	            <div class="row">
	              <div class="col-lg-12 col-md-12 col-sm-6 reklama">
	                <div class="panel panel-default">
	                  <div class="panel-heading hidden-sm">
	                    <h3>Реклама 2</h3>
	                  </div>
	                  <div class="panel-body">
	                    <p>Садржај</p>
	                  </div>
	                </div><!-- panel -->
	              </div><!-- col -->
	            </div><!-- row -->

	            </div><!-- col -->
	        </aside><!-- side -->

    </div><!-- row -->
  </div><!-- container -->
</section><!-- news-page -->