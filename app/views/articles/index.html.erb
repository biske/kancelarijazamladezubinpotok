<ul>
    <% @articles.each do |article| %>
      <li>
        <div class="caption">
          <h2><%= link_to article.title, article_path(article) %></h2>
          <p><%= truncate(my_strip_tags(article.body), length: 200) { link_to ">>", article_path(article) } %></p>
        </div><!-- caption -->
      </li>
    <% end %>
</ul>