<section id="news-page">
	<div class="container">
	    <div class="row">
	    	
	    	<article class="articles">

		    	<div class="col-lg-8 col-md-8 col-sm-12">
					
					<ul id="news-list" class="list-unstyled">
					    <% @articles.each do |article| %>
					    	<div class="col-lg-4 col-md-6 col-sm-6">
					    		<li class="jbg"> 
							      	<div class="thumbnail">
							      		<%= link_to article_path(article) do %>
      					      	 		<%= image_tag 'slika-2.jpg', alt: '#'%>
						      	 	    <% end %>
							      		<div class="caption">
									        <h2><%= link_to article.title, article_path(article) %></h2>
									        <p><%= truncate(my_strip_tags(article.body), length: 200) %></p>
									        <%= link_to article_path(article), class: 'btn btn-primary' do %>
								              Прочитајте више
								              <span class="glyphicon glyphicon-chevron-right"></span>
								            <% end %>
								        </div><!-- caption -->
							      	</div>
							     </li>
					    	</div><!-- col -->
					    	
					    <% end %>
					</ul><!-- news-list -->
				
				    <div class="row">
				   		<div class="col-lg-12 col-md-12 col-sm-12">
				    		<div class="text-center">
					    		<nav>
									<ul class="pagination">
									    <li>
									      <a href="#" aria-label="Previous">
									        <span aria-hidden="true">&laquo;</span>
									      </a>
									    </li>
									    <li class="active"><a href="#">1</a></li>
									    <li><a href="#">2</a></li>
									    <li><a href="#">3</a></li>
									    <li>
									      <a href="#" aria-label="Next">
									        <span aria-hidden="true">&raquo;</span>
									      </a>
									    </li>
									</ul><!-- pagination -->
								</nav><!-- pagination -->
							</div><!-- pagination center -->
						</div><!-- pagination col -->
					</div><!-- pagination row -->


				</div><!-- col -->
			</article><!-- news -->

			<!-- side -->
        <aside>
          <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 side">
            
            <div class="col-sm-1 visible-sm"></div><!-- samo za offset u sm velicini -->
              <div class="col-lg-12 col-md-12 col-sm-10 col-xs-12 video">
                <h3>Препоручујемо видео</h3>
                <%= video_tag 'avantura.mp4', width: '100%', height: '100%', poster: 'poster.jpg', controls: true %>
              </div><!-- col -->
            <div class="col-sm-1 visible-sm"></div><!-- samo za offset u sm velicini -->
              
            <div class="col-sm-2 visible-sm"></div><!-- samo za offset u sm velicini -->
              <div class="col-lg-12 col-md-12 col-sm-4 col-xs-6 raska">
                <%= link_to "http://kzm.raska.rs", title: 'Канцеларија за младе Рашка', target: '_blank' do %>
                  <%= image_tag 'kzm-raska.png', class: 'img-responsive' %>
                <% end %>
              </div><!-- col -->

              <div class="col-lg-12 col-md-12 col-sm-4 col-xs-6 acdc">
                <%= link_to "http://acdc-kosovo.org/index.php", target: '_blank', title: 'ACDC-Kosovo' do %>
                  <%= image_tag 'acdc-logo.png', class: 'img-responsive' %>
                <% end %>
              </div><!-- col -->
              <div class="col-sm-2 visible-sm"></div><!-- samo za offset u sm velicini -->

          </div><!-- col -->
        </aside><!-- side -->

    </div><!-- row -->
  </div><!-- container -->
</section><!-- news-page -->