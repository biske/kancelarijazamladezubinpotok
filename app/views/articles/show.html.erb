<section id="single-article-page">
	<div class="container">
	    <div class="row">
	    	
	    	<article class="single-article">
		    	<div class="col-lg-7 col-md-7 col-sm-12">
					<h2 class="article-title"><%= @article.title %></h2>
					<p class="article-author"><%= @article.user.email %> | <%= @article.created_at %></p>
					<%= image_tag 'slika-2.jpg', alt: '#', class: 'img-responsive' %>      	
					<p class="article-body"><%= raw(@article.body) %></p>
					<%= link_to articles_path, class: 'btn btn-primary' do %><span class="glyphicon glyphicon-chevron-left"></span> Све вести<% end %>
				</div><!-- col -->
			</article><!-- single-article -->

			<!-- side -->
        <aside>
          <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 side">
            
            <div class="col-sm-1 visible-sm"></div><!-- samo za offset u sm velicini -->
              <div class="col-lg-12 col-md-12 col-sm-10 col-xs-12 video">
                <h3>Препоручујемо видео</h3>
                <%= video_tag 'avantura.mp4', width: '100%', height: '100%', poster: 'poster.jpg', controls: true %>
              </div><!-- col -->
            <div class="col-sm-1 visible-sm"></div><!-- samo za offset u sm velicini -->
              
            <div class="col-sm-2 visible-sm"></div><!-- samo za offset u sm velicini -->
              <div class="col-lg-12 col-md-12 col-sm-4 col-xs-6 raska">
                <%= link_to "http://kzm.raska.rs", title: 'Канцеларија за младе Рашка', target: '_blank' do %>
                  <%= image_tag 'kzm-raska.png', class: 'img-responsive' %>
                <% end %>
              </div><!-- col -->

              <div class="col-lg-12 col-md-12 col-sm-4 col-xs-6 acdc">
                <%= link_to "http://acdc-kosovo.org/index.php", target: '_blank', title: 'ACDC-Kosovo' do %>
                  <%= image_tag 'acdc-logo.png', class: 'img-responsive' %>
                <% end %>
              </div><!-- col -->
              <div class="col-sm-2 visible-sm"></div><!-- samo za offset u sm velicini -->

          </div><!-- col -->
        </aside><!-- side -->

    </div><!-- row -->
  </div><!-- container -->
</section><!-- news-page -->